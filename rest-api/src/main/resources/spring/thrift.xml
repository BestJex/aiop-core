<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <!--自然语言处理-->
    <!--thrift连接池工厂类配置-->
    <bean id="thriftNlpConnectionFactory" class="org.bupt.aiop.rpcapi.thrift.pool.ThriftConnectionFactory">
        <property name="serverIP" value="${thrift.nlpServerIP}"/>
        <property name="serverPort" value="${thrift.nlpServerPort}" />
        <property name="timeout" value="${thrift.nlpTimeout}" />
    </bean>

    <!--thrift连接池属性配置-->
    <bean id="genericNlpObjectPoolConfig" class="org.apache.commons.pool2.impl.GenericObjectPoolConfig">
        <property name="maxIdle" value="10"/>
        <property name="maxTotal" value="20" />
        <property name="minIdle" value="3" />
        <property name="testOnBorrow" value="true" />
        <property name="maxWaitMillis" value="1000" />
        <property name="minEvictableIdleTimeMillis" value="60000" />
        <property name="timeBetweenEvictionRunsMillis" value="30000" />
        <property name="numTestsPerEvictionRun" value="3" />
        <property name="testWhileIdle" value="true" />
    </bean>




    <!--图像技术-->
    <!--thrift连接池工厂类配置-->
    <bean id="thriftImageConnectionFactory" class="org.bupt.aiop.rpcapi.thrift.pool.ThriftConnectionFactory">
        <property name="serverIP" value="${thrift.imageServerIP}"/>
        <property name="serverPort" value="${thrift.imageServerPort}" />
        <property name="timeout" value="${thrift.imageTimeout}" />
    </bean>

    <!--thrift连接池属性配置-->
    <bean id="genericImageObjectPoolConfig" class="org.apache.commons.pool2.impl.GenericObjectPoolConfig">
        <property name="maxIdle" value="10"/>
        <property name="maxTotal" value="20" />
        <property name="minIdle" value="3" />
        <property name="testOnBorrow" value="true" />
        <property name="maxWaitMillis" value="1000" />
        <property name="minEvictableIdleTimeMillis" value="60000" />
        <property name="timeBetweenEvictionRunsMillis" value="30000" />
        <property name="numTestsPerEvictionRun" value="3" />
        <property name="testWhileIdle" value="true" />
    </bean>
</beans>
